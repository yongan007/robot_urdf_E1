<?xml version="1.0" encoding= "UTF-8" ?>

<robot name="E1" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
<link name="body">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 3.4"/>
    <geometry>
      <box size="1 1.5 1"/>
    </geometry>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>
  </visual>
</link>

<link name="hip_l">
  <visual>
    <origin rpy="1.57075 0 1.57075" xyz="0 -0.5 2.7"/>
    <geometry>
      <cylinder length="0.5" radius="0.2"/>
    </geometry>
  </visual>
</link>

<link name="hip_r">
  <visual>
    <origin rpy="1.57075 0 1.57075" xyz="0 0.5 2.7"/>
    <geometry>
      <cylinder length="0.5" radius="0.2"/>
    </geometry>
  </visual>
</link>

<joint name="body_hip_l" type="fixed">
  <parent link="body"/>
  <child link="hip_l"/>
</joint>

<joint name="body_hip_r" type="revolute">
  <parent link="body"/>
  <child link="hip_r"/>
  <limit lower="-1.57" upper="1.57" effort="10" velocity="3"/>
</joint>




</robot>